{
	"manifest_version": 2,

	"name": "Material-Freebox-OS",
	"description": "",
	"version": "1.0",

	"browser_action": {
		//"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"activeTab"
		//, "*"
	],
	"content_scripts": [
		{
			"matches": [
				"http://mafreebox.freebox.fr/*",
				"http://*/",
				"https://*/"
			],
			"js": [
				"js/content-script.js",
				"js/script.js"
			],
			"css" : [
				"css/style.css",
				"3d/css/materialdesignicons.min.css"
			]
		}
	],
	"web_accessible_resources": [
		"js/content-script.js",
		"js/script.js",

		"img/wallpaper.jpg",

		"css/style.css",

		"3d/css/materialdesignicons.min.css",
		"3d/fonts/*"
	]
}
