{
    "manifest_version": 2,

    "name": "Material Freebox OS",
    "description": "Redesign de l'interface de Freebox OS",
    "version": "1.7.0",
    "icons": {
        "16": "data/img/icon-16x16.png",
        "48": "data/img/icon-48x48.png",
        "128": "data/img/icon-128x128.png"
    },
    "author": "Quentin S.",

    "applications": {
        "gecko": {
            "id": "material-freebox-os@s-quent.in",
            "strict_min_version": "45.0.0"
        }
    },

    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://mafreebox.freebox.fr/*",
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "data/js/injector.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "data/js/content-script.js",
        "data/js/script.js",

        "data/img/wallpaper1.jpg",
        "data/img/wallpaper2.jpg",

        "data/css/style.css",

        "data/3d/css/materialdesignicons.min.css",
        "data/3d/fonts/*"
    ]
}
